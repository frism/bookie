<div class="container">
  <%= bootstrap_form_for(@booking) do |f| %>
    <%= f.collection_select :item_id, Item.order(:name), :id, :name, {} %>
    <%= f.text_field :start_date, value: "#{Time.zone.now.strftime("%d %B %Y at %I:%M %p")}", readonly: true %> 
    <%= f.text_field :end_date, value: "#{2.days.from_now.beginning_of_day.strftime("%d %B %Y at %I:%M %p")}", readonly: true %>
    <%= f.text_field :quantity, placeholder: "10" %>
    <%= f.submit 'Submit', class: 'btn btn-success' %>
    <%= link_to "Cancel", bookings_path, class: 'btn btn-default' %>
  <% end %>
</div>
