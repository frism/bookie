<div class="container">
  <%= bootstrap_form_for [@item] do |f| %>
    <%= f.label :name %> <%= f.text_field :name, hide_label: true %>
    <%= f.select(:status, Item.statuses.keys.map {|status| [status.titleize,status]}, {}) %>
    <%= f.text_field :quantity, placeholder: "10" %>
    <%= f.check_box :returnable %>
    <%= f.submit 'Submit'%>
    <%= link_to '<i class="fa fa-undo"></i> Cancel'.html_safe, items_path, class: "btn btn-default" %>
  <% end %>
</div>
