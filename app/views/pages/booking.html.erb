<div class="container">
  <h3>My Bookings</h3>
  <table class="table table-bordered table-responsive">
    <thead>
      <tr>
        <th>Booking ID</th>
        <th>Item Name</th>
        <th>Quantity</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
        <th>Fine</th>
      </tr>
    </thead>
    <tbody>
      <% @user_bookings.each do |u_booking| %>
      <tr>
        <td><%= u_booking.id %></td>
        <td><%= u_booking.item.name %></td>
        <td><%= u_booking.quantity %></td>
        <td><%= u_booking.start_date.strftime("%B %d, %Y") %></td>
        <td><%= u_booking.end_date.strftime("%B %d, %Y") %></td>
        <td><%= u_booking.status %></td>
        <td>
          <% if u_booking.is_overdue? == true %>
            <%= number_to_currency(u_booking.fine) %>
          <% else %>
            N/A
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
